<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041120"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".GenerateIdCardActivity">

    <ImageView
        android:id="@+id/imgLogotype"
        android:src="@drawable/logo"
        android:layout_width="176dp"
        android:layout_height="78dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="4" />


    <EditText
        android:id="@+id/txtClientDNI"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded"
        android:clickable="false"
        android:fontFamily="@font/audiowide"
        android:hint="DNI CLIENTE"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnGenerate"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="30sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.5"
        android:backgroundTint="#6393B5"
        android:text="GENERAR CARNET"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnBack"
        android:text="VOLVER"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:backgroundTint="#6393B5"/>



</LinearLayout>