<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041120"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtClub"
        android:text="CLUB DEPORTIVO"
        android:fontFamily="@font/audiowide"
        android:textColor="#6393B5"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_marginTop="80dp"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/imgLogotype"
        android:src="@drawable/logo"
        android:layout_width="176dp"
        android:layout_height="78dp"
        android:layout_marginBottom="200dp"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/btnSignIn"
        android:text="INICIAR SESIÃ“N"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:backgroundTint="#6393B5"/>



</LinearLayout>