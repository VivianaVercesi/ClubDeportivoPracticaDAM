<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041120"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AdminMenuActivity">

    <ImageView
        android:id="@+id/imgLogotype"
        android:src="@drawable/logo"
        android:layout_width="176dp"
        android:layout_height="78dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnSignUp"
        android:text="REGISTRAR CLIENTE"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:backgroundTint="#6393B5"/>

    <Button
        android:id="@+id/btnPayment"
        android:text="PAGAR CUOTA"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:backgroundTint="#6393B5"/>

    <Button
        android:id="@+id/btnDueDate"
        android:text="OBTENER VENCIMIENTOS"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:backgroundTint="#6393B5"/>

    <Button
        android:id="@+id/btnGetMembership"
        android:text="GENERAR CARNET"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:backgroundTint="#6393B5"/>

    <Button
        android:id="@+id/btnActSignUp"
        android:text="REGISTRAR ACTIVIDADES"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:backgroundTint="#6393B5"/>

    <Button
        android:id="@+id/btnExit"
        android:text="SALIR"
        android:fontFamily="@font/audiowide"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:backgroundTint="#6393B5"/>


</LinearLayout>